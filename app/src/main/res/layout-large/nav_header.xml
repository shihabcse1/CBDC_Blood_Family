<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_view_id"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/red500"
    android:layout_height="200dp"
    android:gravity="bottom"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingBottom="16dp"
    android:paddingRight="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_user_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/user_photo"
        android:paddingTop="8dp"
        android:src="@drawable/cbdc_app_icon"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/nav_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="@string/your_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nav_user_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dummy_gmail_com"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/nav_total_donor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_blood_donors_500"
        android:textColor="@color/white" />
</LinearLayout>