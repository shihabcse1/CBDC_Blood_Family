<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddBloodBankActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewBloodBankName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:text="@string/blood_bank_name"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/editText_blood_bank_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/edittext_rectangle_style"
            android:ems="10"
            android:hint="@string/blood_bank_name"
            android:inputType="textPersonName"
            android:maxLength="40" />

        <TextView
            android:id="@+id/textView_blood_bank_contact_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:text="@string/contact_no"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/editText_blood_bank_contact_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/edittext_rectangle_style"
            android:ems="10"
            android:hint="@string/ex_01xxxxxxxxx"
            android:inputType="phone"
            android:maxLength="40" />

        <TextView
            android:id="@+id/textView_upazila_or_university"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:text="@string/address"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/editText_blood_bank_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/edittext_rectangle_style"
            android:hint="@string/enter_address"
            android:ems="10"
            android:inputType="textMultiLine"
            android:lines="2"
            android:maxLength="50" />

        <Button
            android:id="@+id/button_submit_blood_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_rectangle_style"
            android:text="@string/submit" />

    </LinearLayout>
</ScrollView>